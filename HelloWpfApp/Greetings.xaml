<Window x:Class="HelloWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWpfApp"
        mc:Ignorable="d"
        Title="Greetings" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,45,0,0" TextWrapping="Wrap" Text="Select a message option and then choose the Display button." VerticalAlignment="Top"/>
        <RadioButton x:Name="HelloButton" Content="Hello" HorizontalAlignment="Left" Margin="256,165,0,0" VerticalAlignment="Top" IsChecked="True" />
        <RadioButton x:Name="GoodByeButton" Content="GoodBye" HorizontalAlignment="Left" Margin="460,165,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Button" Content="Display" HorizontalAlignment="Center" Margin="0,276,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
